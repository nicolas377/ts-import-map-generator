{
  "compilerOptions": {
    "target": "es2020",
    // "experimentalDecorators": true,
    "module": "commonjs",
    "baseUrl": "./src",
    "resolveJsonModule": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "skipLibCheck": true
  },
  "include": ["**/*"]
}
